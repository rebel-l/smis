{
  "issues": {
    "exclude-rules": [
      {
        "linters": [
          "lll"
        ],
        "source": "^//go:generate "
      },
      {
        "path": "_test.go",
        "linters": [
          "gomnd"
        ]
      }
    ],
    "exclude-use-default": false,
    "max-issues-per-linter": 0,
    "max-same-issues": 0
  },
  "linters": {
    "enable-all": true,
    "disable": [
      "scopelint"
    ]
  },
  "run": {
    "deadline": "5m",
    "skip-dirs": [
      "reports",
      "scripts"
    ],
    "tests": true
  }
}